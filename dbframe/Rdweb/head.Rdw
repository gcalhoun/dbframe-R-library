\method{tail}{dbframe}{head(x, n = 6L, \dots)}
}
\arguments{
  \item{x}{A \code{dbframe} object}
  \item{n}{The number of records to retrieve.}
  \item{\dots}{Other arguments to pass to \code{select}}
